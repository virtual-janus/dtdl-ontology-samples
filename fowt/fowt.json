{
  "@id": "dtmi:example:FOWT;1",
  "@type": "Interface",
  "@context": "dtmi:dtdl:context;2",
  "displayName": "Floating Offshore Wind Turbine",
  "description": "Digital twin for a floating offshore wind turbine with attributes and relationships.",
  "contents": [
    {
      "@type": "Attribute",
      "name": "Manufacturer",
      "schema": "string",
      "writable": false,
      "description": "Manufacturer of the turbine"
    },
    {
      "@type": "Attribute",
      "name": "ModelNumber",
      "schema": "string",
      "writable": false,
      "description": "Model number of the turbine"
    },
    {
      "@type": "Attribute",
      "name": "RatedPower_kW",
      "schema": "double",
      "writable": false,
      "description": "Rated power output in kilowatts"
    },
    {
      "@type": "Attribute",
      "name": "Time",
      "schema": "double",
      "writable": true,
      "description": "Simulation time [s]"
    },
    {
      "@type": "Attribute",
      "name": "Azimuth",
      "schema": "double",
      "writable": true,
      "description": "Rotor azimuth angle [deg]"
    },
    {
      "@type": "Attribute",
      "name": "RotSpeed",
      "schema": "double",
      "writable": true,
      "description": "Rotor speed [rpm]"
    },
    {
      "@type": "Attribute",
      "name": "RotPwr",
      "schema": "double",
      "writable": true,
      "description": "Rotor power output [kW]"
    },
    {
      "@type": "Component",
      "name": "Nacelle",
      "schema": {
        "@id": "dtmi:example:FOWT_Nacelle;1",
        "@type": "Interface",
        "displayName": "Nacelle",
        "contents": [
          {
            "@type": "Attribute",
            "name": "GearboxType",
            "schema": "string",
            "writable": false,
            "description": "Type of gearbox in nacelle"
          },
          {
            "@type": "Attribute",
            "name": "GenSpeed",
            "schema": "double",
            "writable": true,
            "description": "Generator speed [rpm]"
          },
          {
            "@type": "Attribute",
            "name": "RootMyc1",
            "schema": "double",
            "writable": true,
            "description": "Root moment about y-axis for blade 1 [kNm]"
          }
        ]
      }
    },
    {
      "@type": "Component",
      "name": "Tower",
      "schema": {
        "@id": "dtmi:example:FOWT_Tower;1",
        "@type": "Interface",
        "displayName": "Tower",
        "contents": [
          {
            "@type": "Attribute",
            "name": "Height_m",
            "schema": "double",
            "writable": false,
            "description": "Tower height in meters"
          },
          {
            "@type": "Attribute",
            "name": "TwrBsFyt",
            "schema": "double",
            "writable": true,
            "description": "Tower base side-to-side bending moment [kNm]"
          },
          {
            "@type": "Attribute",
            "name": "TwrBsFzt",
            "schema": "double",
            "writable": true,
            "description": "Tower base axial force [kN]"
          }
        ]
      }
    },
    {
      "@type": "Component",
      "name": "Platform",
      "schema": {
        "@id": "dtmi:example:FOWT_Platform;1",
        "@type": "Interface",
        "displayName": "Floating Platform",
        "contents": [
          {
            "@type": "Attribute",
            "name": "PlatformType",
            "schema": "string",
            "writable": false,
            "description": "Type of floating platform (e.g., spar, semi-submersible)"
          },
          {
            "@type": "Attribute",
            "name": "Pitch",
            "schema": "double",
            "writable": true,
            "description": "Platform pitch angle [deg]"
          },
          {
            "@type": "Attribute",
            "name": "Roll",
            "schema": "double",
            "writable": true,
            "description": "Platform roll angle [deg]"
          },
          {
            "@type": "Attribute",
            "name": "Heave",
            "schema": "double",
            "writable": true,
            "description": "Platform heave displacement [m]"
          }
        ]
      }
    },
    {
      "@type": "Component",
      "name": "Blade1",
      "schema": {
        "@id": "dtmi:example:FOWT_Blade1;1",
        "@type": "Interface",
        "displayName": "Blade 1",
        "contents": [
          {
            "@type": "Attribute",
            "name": "Length_m",
            "schema": "double",
            "writable": false,
            "description": "Blade length in meters"
          },
          {
            "@type": "Attribute",
            "name": "OoPDefl1",
            "schema": "double",
            "writable": true,
            "description": "Blade 1 out-of-plane deflection [m]"
          },
          {
            "@type": "Attribute",
            "name": "IPDefl1",
            "schema": "double",
            "writable": true,
            "description": "Blade 1 in-plane deflection [m]"
          },
          {
            "@type": "Attribute",
            "name": "BldPitch1",
            "schema": "double",
            "writable": true,
            "description": "Blade 1 pitch angle [deg]"
          }
        ]
      }
    },
    {
      "@type": "Relationship",
      "name": "mountedOn",
      "target": "dtmi:example:FOWT_Platform;1",
      "displayName": "Mounted On",
      "description": "The turbine is mounted on the floating platform"
    },
    {
      "@type": "Relationship",
      "name": "hasTower",
      "target": "dtmi:example:FOWT_Tower;1",
      "displayName": "Has Tower",
      "description": "The turbine includes a tower component"
    },
    {
      "@type": "Relationship",
      "name": "hasNacelle",
      "target": "dtmi:example:FOWT_Nacelle;1",
      "displayName": "Has Nacelle",
      "description": "The turbine includes a nacelle component"
    },
    {
      "@type": "Relationship",
      "name": "hasBlade1",
      "target": "dtmi:example:FOWT_Blade1;1",
      "displayName": "Has Blade 1",
      "description": "The turbine includes blade 1"
    }
  ]
}
